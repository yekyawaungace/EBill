
<!DOCTYPE html>
<html>
<head>
    <title>TownShips</title>
    <link href="~/lib/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script>

        $(document).ready(function () {
            $("#lMerchants").addClass("active");
        });
    </script>
    <style>
        .nrc-table {
            width: 100% !important;
        }
        
        #merchantsTable tbody td:nth-child(5) {
            border-right-style: none;
        }

        #merchantsTable tbody td:nth-child(6) {
            border-right-style: none;
        }

    </style>
</head>
<body>
    <!-- Page Heading -->

    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Agent</h1>
        <a asp-action="Create" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm create" style="width: 100px;">
            <i class="fas fa-user fa-sm text-white-50"></i> Create
        </a>
    </div>

    <!-- Page Body -->
    <div class="card shadow mb-8 table-con">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Agent Listing</h6>
        </div>

        <div class="card-body">
           @*  <div style="color: green;" class="form-group">
                @ViewBag.SuccessMessage
            </div>
            <div style="color: red;" class="form-group">
                @ViewBag.ErrorMessage
            </div> *@

            @if (ViewBag.SuccessMessage != null)
            {
                <script type="text/javascript">
                    window.onload = function () {
                        alert("@ViewBag.SuccessMessage");
                    };
                </script>
            }

            @if (ViewBag.ErrorMessage != null)
            {
                <script type="text/javascript">
                    window.onload = function () {
                        alert("@ViewBag.ErrorMessage");
                    };
                </script>
            }

            <div class="table-responsive merchant-container">
                <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
                    <table id="merchantsTable" class="table table-bordered" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>PhoneNo</th>
                                <th>Address</th>
                                <th colspan="3" style="text-align:left">Action</th>
                              @*   <th></th>
                              <th></th> *@

                            </tr>
                        </thead>
                    </table>
                </div>
            </div>

        </div>
    </div>
    <!-- End Of Page Body -->
</body>
</html>

@section Scripts
    {
    <script src="~/js/bootbox.js"></script>
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/js/MerchantsTable.js"></script>
}

