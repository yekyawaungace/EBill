@model TravelInsurance.Infrastructure.Dto.Country.CountryRequestViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Country</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
          
       @*      <div style="color: green;" class="form-group">
                @ViewBag.SuccessMessage
            </div>
            <div style="color: red;" class="form-group">
                @ViewBag.ErrorMessage
            </div> *@
            @if (ViewBag.SuccessMessage != null)
            {
                <script type="text/javascript">
                    window.onload = function () {
                        alert("@ViewBag.SuccessMessage");
                    };
                </script>
            }

            @if (ViewBag.ErrorMessage != null)
            {
                <script type="text/javascript">
                    window.onload = function () {
                        alert("@ViewBag.ErrorMessage");
                    };
                </script>
            }

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">
        <input type="button" class="form-control ok-btn" value="Back to List" />
    </a>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
