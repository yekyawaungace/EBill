
<!DOCTYPE html>
<html>
<head>
    <title>Premium Fee</title>
    <link href="~/lib/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script>

        $(document).ready(function () {
            $("#lPremiumFees").addClass("active");
        });
    </script>
    <style>
        .nrc-table {
            width: 100% !important;
        }
    </style>
</head>
<body>
    <!-- Page Heading -->

    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Premium Fee</h1>
@*         <a asp-action="Create" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm create" style="width: 100px;">
            <i class="fas fa-user fa-sm text-white-50"></i> Create
        </a> *@
    </div>

    <!-- Page Body -->
    <div class="card shadow mb-8 table-con">


        <div class="card-body">
          @*   <div style="color: green;" class="form-group">
                @ViewBag.SuccessMessage
            </div>
            <div style="color: red;" class="form-group">
                @ViewBag.ErrorMessage
            </div> *@
            @if (ViewBag.SuccessMessage != null)
            {
                <script type="text/javascript">
                    window.onload = function () {
                        alert("@ViewBag.SuccessMessage");
                    };
                </script>
            }

            @if (ViewBag.ErrorMessage != null)
            {
                <script type="text/javascript">
                    window.onload = function () {
                        alert("@ViewBag.ErrorMessage");
                    };
                </script>
            }
            <form class="nrc-con" action="/PremiumFees/Index" method="post">

                <div class="row premium-create">
                    <div class="col-sm-12 col-md-5 premium-input">
                        <label>Duration(days)</label>
                        <input type="number" id="Duration" name="Duration" class="form-control nrc-input" placeholder="days" required />
                    </div>
                    <div class="col-sm-12 col-md-5 premium-input">
                        <label>Premium</label>
                        <input type="number" id="Fee" name="Fee" class="form-control nrc-input" placeholder="premium fee" required />
                    </div>
                    <div class="col-sm-12 col-md-2 premium-input">
                        <input type="submit" class="form-control nrc-btn" value="Create" id="submit-btn">
                    </div>
                </div>
              
                <span></span>
                <span></span>
                <br />

                @if (ViewBag.SuccessMessage != null)
                {
                    <script type="text/javascript">
                        window.onload = function () {
                            alert("@ViewBag.SuccessMessage");
                        };
                    </script>
                }
                @if (ViewBag.ErrorMessage != null)
                {
                    <script type="text/javascript">
                        window.onload = function () {
                            alert("@ViewBag.ErrorMessage");
                        };
                    </script>
                }

            </form>
            <div class="table-responsive nrc-table">
                <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
                    <table id="premiumFeesTable" class="table table-bordered" width="100%" cellspacing="0">
                        <thead>
                            <tr>

                                <th>Duration(days)</th>
                                <th>Premium</th>
                                <th></th>
                                

                            </tr>
                        </thead>
                    </table>
                </div>
            </div>

        </div>
    </div>
    <!-- End Of Page Body -->
</body>
</html>

@section Scripts
    {
    <script src="~/js/bootbox.js"></script>
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/js/PremiumFeesTable.js"></script>
}

