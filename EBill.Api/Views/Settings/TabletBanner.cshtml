@* @using TravelInsurance.Infrastructure.Entities; *@
@model TravelInsurance.Infrastructure.Entities.Setting;

@{
    ViewData["Title"] = "Details";
}

<script>
    function validateFileType() {
        var selectedFile = document.getElementById('fileInput').files[0];
        var allowedTypes = ['image/png', 'image/jpeg', 'image/jpg'];

        if (!allowedTypes.includes(selectedFile.type)) {
            alert('Invalid file type. Please upload a PNG,JPG file.');
            document.getElementById('fileInput').value = '';
        }
    }
</script>

<div class="card">
    <div class="card-header">
        <h3 class="text-uppercase">Tablet Banner Details</h3>
    </div>
    <div class="card-body">
        <form method="post" enctype="multipart/form-data" asp-controller="Settings" asp-action="TabletBanner" asp-route-id="@Model.Id">

            <span>Select File:</span>
            <input type="file" id="fileInput" name="postedFiles" onchange="validateFileType()">
            <input type="submit" value="Upload" />
            <br />
            <span style="color:green">@Html.Raw(ViewBag.Message)</span>
            <span style="color:red">@Html.Raw(ViewBag.ErrorMessage)</span>
        </form>





        <br />
        <br />
        <div>
            <a asp-action="Index" class="btn btn-sm btn-primary rounded-0"><i class="fas fa-fast-backward"></i> Back to List</a>
        </div>
    </div>
</div>


