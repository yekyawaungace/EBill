@model TravelInsurance.Infrastructure.Dto.NRCTypes.NRCTypesRequestViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="container-fluid">

    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">NRC Type Management</h1>
    </div>

    <!-- Create User -->
    <div class="card shadow mb-4 create-user">
        <div class="card-header py-3">
            <h6 style="color:#00376c !important" class="m-0 font-weight-bold text-primary">Create NRC Type</h6>
        </div>
        <div class="card-body">

            <div class="row">
                <div class="col-md-8">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="TypeEN" class="control-label">Type (en)</label>
                            <input asp-for="TypeEN" class="form-control" />
                            <span asp-validation-for="TypeEN" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="TypeMM" class="control-label">Type (mm)</label>
                            <input asp-for="TypeMM" class="form-control" />
                            <span asp-validation-for="TypeMM" class="text-danger"></span>
                        </div>

                        @*   <div style="color: green;" class="form-group">
                    @ViewBag.SuccessMessage
                </div>
                <div style="color: red;" class="form-group">
                    @ViewBag.ErrorMessage
                </div> *@
                        @if (ViewBag.SuccessMessage != null)
                        {
                            <script type="text/javascript">
                                window.onload = function () {
                                    alert("@ViewBag.SuccessMessage");
                                };
                            </script>
                        }

                        @if (ViewBag.ErrorMessage != null)
                        {
                            <script type="text/javascript">
                                window.onload = function () {
                                    alert("@ViewBag.ErrorMessage");
                                };
                            </script>
                        }

                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>


        </div>
    </div>
</div>



<div>
    <a asp-action="Index">
        <input type="button" class="form-control ok-btn" value="Back to List" />
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
